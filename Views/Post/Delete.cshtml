@model ForumOnAnyTopic.Models.Post

@{
    ViewData["Title"] = "Delete your post";
}

<h3>Are you sure you want to delete this post?</h3>
<div>
    <h4>Delete your post</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Massage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Massage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Topic" asp-action="Details" asp-route-id="@Model.TopicId">Back to posts</a>
    </form>
</div>
